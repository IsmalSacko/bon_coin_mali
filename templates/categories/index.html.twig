{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <div class="container">
        <h3>Categories index</h3>
   
    <p class="text-center"> <a class="btn btn-primary" href="{{ path('categories_new') }}">Create new</a></p>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>parent</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.parent }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('categories_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('categories_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
            
            
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
